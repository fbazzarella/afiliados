<div class="modal fade" id="new-newsletter" tabindex="-1" role="dialog" aria-labelledby="new-newsletter-title" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for :newsletter do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="new-newsletter-title">Nova Newsletter</h4>
        </div>

        <div class="modal-body">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <label for="newsletter_subject">Assunto</label>
                <%= f.text_field :subject, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <label for="newsletter_from">Remetente</label>
                <%= f.text_field :from, class: 'form-control', value: ENV['SMTP_FROM'] %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <label for="newsletter_body">Corpo em Texto ou HTML</label>
                <%= f.text_area :body, class: 'form-control' %>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-sm btn-default" data-dismiss="modal" aria-label="Fechar">Fechar</button>
          <input type="submit" class="btn btn-sm btn-primary pull-right" value="Criar Newsletter">
        </div>
      <% end %>
    </div>
  </div>
</div>
